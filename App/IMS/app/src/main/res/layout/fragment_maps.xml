<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mapContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MapsFragment">

    <com.example.ims.views.MapView
        android:id="@+id/mapGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_button"
        android:textColor="@android:color/white"
        android:backgroundTint="#223a1d"
        android:layout_gravity="bottom|center"
        android:layout_margin="70dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/centerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/white"
        android:backgroundTint="#00285C"
        android:layout_gravity="top|start"
        android:layout_margin="30dp"
        app:maxImageSize="44dp"
        app:srcCompat="@drawable/baseline_gps_fixed_24"
        />

    <ImageButton
        android:id="@+id/infoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="30dp"
        android:background="@drawable/round_button"
        android:contentDescription="@string/info_icon"
        app:srcCompat="@drawable/icon_info_button"
        />
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/popup_window_view"
        android:layout_width="331dp"
        android:layout_height="239dp"
        android:layout_centerInParent="true"
        android:layout_gravity="top|end"
        android:layout_margin="2dp"
        android:backgroundTint="@color/darkGrey"
        android:outlineProvider="none"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <TextView
            android:id="@+id/title_info"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/mediumGrey"
            android:gravity="center"
            android:text="@string/info"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="#00285C"
            android:clickable="false"
            app:fabSize="mini"
            app:maxImageSize="35dp"
            app:srcCompat="@drawable/baseline_gps_fixed_24"
            app:tint="@color/white" />

        <ImageView
            android:layout_width="49dp"
            android:layout_height="43dp"
            android:layout_marginVertical="130dp"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/baseline_warning_24" />

        <Button
            android:id="@+id/closeButton_info"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_margin="7dp"
            android:backgroundTint="@color/mediumGrey"
            android:text="OK"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="74dp"
            android:text="Click to center view"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="133dp"
            android:text="Click to display image of avoided collision"
            android:textColor="@color/white" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>